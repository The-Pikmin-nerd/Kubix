script/source = "extends CharacterBody2D
const JUMP_VELOCITY = -600.0
var fall = 1

func _physics_process(delta: float) -> void:
	if fall != 1:
		velocity += get_gravity() * delta
	move_and_slide()

func _on_button_button_up() -> void:
	
	fall = 0
	await get_tree().create_timer(1.5).timeout
	get_tree().change_scene_to_file(\"res://Senes/Menus/LevelSelector1.tscn\")
"

[sub_resource type="GDScript" id="GDScript_lti8b"]
script/source = "extends Button

func _ready():
	pass

func _shrink_and_disappear() -> void:
	var tween = create_tween()

	# On réduit le bouton jusqu'à 0
	tween.tween_property(self, \"scale\", Vector2.ZERO, 0.5)\\
		.set_trans(Tween.TRANS_SINE).set_ease(Tween.EASE_IN_OUT)

func _on_button_up() -> void:
	await _shrink_and_disappear()
	await get_tree().create_timer(0.4).timeout
	get_tree().change_scene_to_file(\"res://Senes/Menus/SettingsMain.tscn\")


func _on_button_button_up() -> void:
	_shrink_and_disappear()
"

